<form action="~/AdminUser/UpdateUser" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="hidden" name="id" value="@ViewBag.list[0][0]">
        <label for="inputName">Loại người dùng</label>
        <select class="form-control" name="idrole">
            @foreach (var a in ViewBag.listRole)
            {
                if (a[0] == ViewBag.list[0][7])
                {
                    <option value="@a[0]" selected>@a[1]</option>
                }
                else
                {
                    <option value="@a[0]">@a[1]</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label>Số điện thoại</label>
        <input type="text" class="form-control" placeholder="@ViewBag.list[0][4]" readonly>
    </div>
    <div class="form-group">
        <label>Mật khẩu</label>
        <input type="text" name="Password" class="form-control" value="@ViewBag.list[0][1]">
    </div>
    <div class="form-group">
        <label>Tên người dùng</label>
        <input type="text" name="name" class="form-control" value="@ViewBag.list[0][2]">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" name="email" class="form-control" value="@ViewBag.list[0][3]">
    </div>
    <div class="mb-3">
        <label for="address">Địa chỉ (số nhà, tên đường) *</label>
        <input type="text" class="form-control" id="address" name="diachi" placeholder="" value="@ViewBag.list[0][5]">
        <div class="invalid-feedback"> Vui lòng điền địa chỉ nhận hàng. </div>
    </div>
    <div class="form-group">
        <label>Avatar người dùng</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="customFile" name="image" value="@ViewBag.list[0][6]">
            <label class="custom-file-label" for="customFile">Chọn avatar người dùng</label>
        </div>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" id="submitUpdateUser">Submit</button>
    </div>
</form>

@Scripts.Render("~/jso")


